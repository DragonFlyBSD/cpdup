# Maintainer: Aaron LI <aly@aaronly.me>

pkgname=cpdup
pkgver=1.20
pkgrel=1
pkgdesc="Filesystem mirroring utility from DragonFly BSD"
url="https://github.com/DragonFlyBSD/cpdup"
license=('BSD')
arch=('i686' 'x86_64')
depends=('libbsd' 'openssl')
makedepends=('pkg-config')

build() {
	make
}

package() {
	install -s -Dm 755 cpdup ${pkgdir}/usr/bin/cpdup
	install -Dm 644 cpdup.1 ${pkgdir}/usr/share/man/man1/cpdup.1
	gzip -9 cpdup.1 ${pkgdir}/usr/share/man/man1/cpdup.1
	for f in README.md BACKUPS PORTING; do
		install -Dm 644 ${f} ${pkgdir}/usr/share/doc/cpdup/${f}
	done
	install -Dm 644 LICENSE ${pkgdir}/usr/share/licenses/cpdup/LICENSE
}
